{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}Edit user{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <div>
        <h1 class="mb-0">Edit user</h1>
        <div class="text-muted">Update user details</div>
    </div>

    <div class="d-flex gap-2">
        <a href="{{ path('users_show', { id: user.id }) }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
        <a href="{{ path('users_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-list-ul me-1"></i> Users
        </a>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="{{ path('users_index') }}">Users</a></li>
        <li class="breadcrumb-item"><a href="{{ path('users_show', { id: user.id }) }}">User #{{ user.id }}</a></li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body p-4">
        {{ form_start(form, { attr: { id: 'editUserForm' } }) }}

        <div class="row g-3">
            <div class="col-md-6">
                {{ form_row(form.first_name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.last_name) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.gender) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.birthdate) }}
            </div>

            {# wa≈ºne: wyrenderuje ukryte pola (CSRF, _method, itp.) #}
            {{ form_rest(form) }}
        </div>

        <hr class="my-4">

        <div class="d-flex flex-wrap justify-content-between align-items-center gap-2">
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary" id="saveBtn">
                    <span class="me-1"><i class="bi bi-check2-circle"></i></span>
                    <span class="js-save-text">Save changes</span>
                    <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true" id="saveSpinner"></span>
                </button>

                <a href="{{ path('users_show', { id: user.id }) }}" class="btn btn-link">
                    Cancel
                </a>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>

{# Danger zone #}
<div class="card mt-3 border border-danger-subtle">
    <div class="card-body p-4">
        <div class="d-flex justify-content-between align-items-start gap-3">
            <div>
                <div class="fw-semibold text-danger">Danger zone</div>
                <div class="text-muted">
                    Deleting a user is permanent and cannot be undone.
                </div>
            </div>

            <form method="post"
                  action="{{ path('users_delete', { id: user.id }) }}"
                  class="m-0 js-delete-form">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                <input type="hidden" name="_method" value="DELETE">

                <button type="button"
                        class="btn btn-outline-danger js-delete-btn"
                        data-user="{{ (user.first_name ~ ' ' ~ user.last_name)|trim }}">
                    <i class="bi bi-trash me-1"></i> Delete user
                </button>
            </form>
        </div>
    </div>
</div>

{# Delete confirmation modal #}
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete user</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="deleteUserName">this user</strong>?
                <div class="text-muted small mt-2">This action cannot be undone.</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash me-1"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
(function () {
    const form = document.getElementById('editUserForm');
    const saveBtn = document.getElementById('saveBtn');
    const spinner = document.getElementById('saveSpinner');
    if (form && saveBtn && spinner) {
        form.addEventListener('submit', () => {
            saveBtn.disabled = true;
            spinner.classList.remove('d-none');
        });
    }

    const modalEl = document.getElementById('deleteUserModal');
    const deleteBtn = document.querySelector('.js-delete-btn');
    const deleteForm = document.querySelector('.js-delete-form');

    if (!deleteBtn || !deleteForm) return;

    if (!modalEl || typeof bootstrap === 'undefined' || !bootstrap.Modal) {
        deleteBtn.addEventListener('click', () => {
            const name = deleteBtn.dataset.user || 'this user';
            if (confirm(`Are you sure you want to delete ${name}?`)) deleteForm.submit();
        });
        return;
    }

    const modal = new bootstrap.Modal(modalEl);
    const nameEl = document.getElementById('deleteUserName');
    const confirmBtn = document.getElementById('confirmDeleteBtn');

    deleteBtn.addEventListener('click', () => {
        nameEl.textContent = deleteBtn.dataset.user || 'this user';
        modal.show();
    });

    confirmBtn.addEventListener('click', () => deleteForm.submit());
})();
</script>
{% endblock %}
