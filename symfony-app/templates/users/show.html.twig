{% extends 'base.html.twig' %}

{% block title %}User details{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <div>
        <h1 class="mb-0">User #{{ user.id }}</h1>
        <div class="text-muted">User details and actions</div>
    </div>

    <div class="d-flex gap-2">
        <a href="{{ path('users_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>

        <a href="{{ path('users_edit', { id: user.id }) }}" class="btn btn-primary">
            <i class="bi bi-pencil-square me-1"></i> Edit
        </a>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="{{ path('users_index') }}">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">User #{{ user.id }}</li>
    </ol>
</nav>

<div class="row g-3">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start gap-3 mb-3">
                    <div>
                        <div class="text-muted small">Name</div>
                        <div class="fs-4 fw-semibold">
                            {{ (user.first_name ~ ' ' ~ user.last_name)|trim }}
                        </div>
                    </div>

                    <div class="text-end">
                        <div class="text-muted small">Gender</div>
                        {% set g = user.gender|lower %}
                        {% if g == 'male' %}
                            <span class="badge text-bg-primary">Male</span>
                        {% elseif g == 'female' %}
                            <span class="badge text-bg-danger">Female</span>
                        {% else %}
                            <span class="badge text-bg-secondary">{{ user.gender|capitalize }}</span>
                        {% endif %}
                    </div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="text-muted small">First name</div>
                        <div class="fw-semibold">{{ user.first_name }}</div>
                    </div>

                    <div class="col-md-6">
                        <div class="text-muted small">Last name</div>
                        <div class="fw-semibold">{{ user.last_name }}</div>
                    </div>

                    <div class="col-md-6">
                        <div class="text-muted small">Birthdate</div>
                        <div class="fw-semibold">
                            {{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="text-muted small">ID</div>
                        <div class="fw-semibold text-muted">#{{ user.id }}</div>
                    </div>
                </div>

                <hr class="my-4">

                <div class="d-flex flex-wrap gap-2">
                    <a href="{{ path('users_edit', { id: user.id }) }}" class="btn btn-primary">
                        <i class="bi bi-pencil-square me-1"></i> Edit user
                    </a>
                    <a href="{{ path('users_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-list-ul me-1"></i> Back to list
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border border-danger-subtle">
            <div class="card-body p-4">
                <div class="fw-semibold text-danger mb-1">Danger zone</div>
                <div class="text-muted mb-3">
                    Deleting a user is permanent and cannot be undone.
                </div>

                <form method="post"
                      action="{{ path('users_delete', { id: user.id }) }}"
                      class="m-0 js-delete-form">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                    <input type="hidden" name="_method" value="DELETE">

                    <button type="button"
                            class="btn btn-outline-danger w-100 js-delete-btn"
                            data-user="{{ (user.first_name ~ ' ' ~ user.last_name)|trim }}">
                        <i class="bi bi-trash me-1"></i> Delete user
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

{# Delete confirmation modal #}
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete user</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="deleteUserName">this user</strong>?
                <div class="text-muted small mt-2">This action cannot be undone.</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash me-1"></i> Delete
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
(function () {
    const modalEl = document.getElementById('deleteUserModal');
    const deleteBtn = document.querySelector('.js-delete-btn');
    const deleteForm = document.querySelector('.js-delete-form');

    if (!deleteBtn || !deleteForm) return;

    if (!modalEl || typeof bootstrap === 'undefined' || !bootstrap.Modal) {
        deleteBtn.addEventListener('click', () => {
            const name = deleteBtn.dataset.user || 'this user';
            if (confirm(`Are you sure you want to delete ${name}?`)) deleteForm.submit();
        });
        return;
    }

    const modal = new bootstrap.Modal(modalEl);
    const nameEl = document.getElementById('deleteUserName');
    const confirmBtn = document.getElementById('confirmDeleteBtn');

    deleteBtn.addEventListener('click', () => {
        nameEl.textContent = deleteBtn.dataset.user || 'this user';
        modal.show();
    });

    confirmBtn.addEventListener('click', () => deleteForm.submit());
})();
</script>
{% endblock %}
