{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}New user{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <div>
        <h1 class="mb-0">Create user</h1>
        <div class="text-muted">Add a new user to the list</div>
    </div>

    <div class="d-flex gap-2">
        <a href="{{ path('users_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back
        </a>
        <a href="{{ path('users_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-list-ul me-1"></i> Users
        </a>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a href="{{ path('users_index') }}">Users</a></li>
        <li class="breadcrumb-item active" aria-current="page">New</li>
    </ol>
</nav>

<div class="card">
    <div class="card-body p-4">
        {{ form_start(form, { attr: { id: 'newUserForm' } }) }}

        <div class="row g-3">
            {# Dopasowane do Twoich pól z przykładu #}
            <div class="col-md-6">
                {{ form_row(form.first_name) }}
            </div>

            <div class="col-md-6">
                {{ form_row(form.last_name) }}
            </div>

            <div class="col-md-4">
                {{ form_row(form.gender) }}
            </div>

            <div class="col-md-4">
                {{ form_row(form.birthdate) }}
            </div>

            {# ważne: ukryte pola (CSRF itp.) #}
            {{ form_rest(form) }}
        </div>

        <hr class="my-4">

        <div class="d-flex flex-wrap gap-2">
            <button type="submit" class="btn btn-primary" id="createBtn">
                <i class="bi bi-plus-circle me-1"></i>
                <span>Create</span>
                <span class="spinner-border spinner-border-sm ms-2 d-none" role="status" aria-hidden="true" id="createSpinner"></span>
            </button>

            <a href="{{ path('users_index') }}" class="btn btn-link">
                Cancel
            </a>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
(function () {
    const form = document.getElementById('newUserForm');
    const btn = document.getElementById('createBtn');
    const spinner = document.getElementById('createSpinner');

    if (!form || !btn || !spinner) return;

    form.addEventListener('submit', () => {
        btn.disabled = true;
        spinner.classList.remove('d-none');
    });
})();
</script>
{% endblock %}
