{% extends 'base.html.twig' %}
{% block title %}Users{% endblock %}

{% block body %}
<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <div>
        <h1 class="mb-0">Users</h1>
        <div class="text-muted">Manage your users list</div>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-outline-secondary" type="button"
                data-bs-toggle="offcanvas" data-bs-target="#filtersCanvas" aria-controls="filtersCanvas">
            <i class="bi bi-funnel me-1"></i> Filters
        </button>

        <a href="{{ path('users_new') }}" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> New user
        </a>
    </div>
</div>

{# OFFCANVAS: filters #}
<div class="offcanvas offcanvas-end" tabindex="-1" id="filtersCanvas" aria-labelledby="filtersCanvasLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="filtersCanvasLabel">
            <i class="bi bi-funnel me-2"></i>Filters
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>

    <div class="offcanvas-body">
        {{ form_start(form, { method: 'GET', attr: { id: 'filtersForm', class: 'vstack gap-3', autocomplete: 'off' } }) }}
            <div>{{ form_row(form.first_name) }}</div>
            <div>{{ form_row(form.last_name) }}</div>
            <div>{{ form_row(form.gender) }}</div>

            <div class="row g-2">
                <div class="col-6">{{ form_row(form.birthdate_from) }}</div>
                <div class="col-6">{{ form_row(form.birthdate_to) }}</div>
            </div>

            <div class="d-flex gap-2 pt-2">
                <button type="submit" class="btn btn-secondary flex-grow-1" id="applyFiltersBtn">
                    <i class="bi bi-check2 me-1"></i> Apply
                </button>

                <a href="{{ path('users_index') }}" class="btn btn-link">
                    Reset
                </a>
            </div>
        {{ form_end(form) }}

        <div class="text-muted small mt-3">
            Tip: Fill all fields and click <strong>Apply</strong>.
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="p-3 d-flex justify-content-between align-items-center">
            <div class="fw-semibold">Results</div>
            <a href="{{ path('users_index') }}" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-arrow-counterclockwise me-1"></i>Reset
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">ID</th>
                        <th>First name</th>
                        <th>Last name</th>
                        <th style="width: 140px;">Gender</th>
                        <th style="width: 150px;">Birthdate</th>
                        <th class="text-end" style="width: 140px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                {% for u in users %}
                    <tr>
                        <td class="text-muted">#{{ u.id }}</td>
                        <td class="fw-semibold">{{ u.first_name }}</td>
                        <td>{{ u.last_name }}</td>
                        <td>
                            {% set g = u.gender|lower %}
                            {% if g == 'male' %}
                                <span class="badge text-bg-primary">Male</span>
                            {% elseif g == 'female' %}
                                <span class="badge text-bg-danger">Female</span>
                            {% else %}
                                <span class="badge text-bg-secondary">{{ u.gender|capitalize }}</span>
                            {% endif %}
                        </td>
                        <td>{{ u.birthdate ? u.birthdate|date('Y-m-d') : '' }}</td>

                        <td class="text-end">
                            <div class="dropdown">
                              <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button"
                                      data-bs-toggle="dropdown"
                                      data-bs-boundary="viewport"
                                      data-bs-display="static"
                                      aria-expanded="false">
                                  Actions
                              </button>


                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="{{ path('users_show', {id: u.id}) }}">
                                            <i class="bi bi-eye me-2"></i>View
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="{{ path('users_edit', {id: u.id}) }}">
                                            <i class="bi bi-pencil-square me-2"></i>Edit
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form method="post"
                                              action="{{ path('users_delete', { id: u.id }) }}"
                                              class="m-0 js-delete-form">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ u.id) }}">
                                            <input type="hidden" name="_method" value="DELETE">

                                            <button type="button"
                                                    class="dropdown-item text-danger js-delete-btn"
                                                    data-user="{{ (u.first_name ~ ' ' ~ u.last_name)|trim }}">
                                                <i class="bi bi-trash me-2"></i>Delete
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center text-muted py-5">
                            <div class="mb-2"><i class="bi bi-inbox fs-1"></i></div>
                            No users found
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{# MODAL Delete #}
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete user</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="deleteUserName">this user</strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash me-1"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
(function () {
    const filtersForm = document.getElementById('filtersForm');
    const offcanvasEl = document.getElementById('filtersCanvas');

    if (filtersForm && offcanvasEl && typeof bootstrap !== 'undefined' && bootstrap.Offcanvas) {
        filtersForm.addEventListener('submit', () => {
            const instance = bootstrap.Offcanvas.getInstance(offcanvasEl) || new bootstrap.Offcanvas(offcanvasEl);
            instance.hide();
        });
    }
    const modalEl = document.getElementById('deleteUserModal');
    if (!modalEl || typeof bootstrap === 'undefined' || !bootstrap.Modal) {
        document.querySelectorAll('.js-delete-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                const name = btn.dataset.user || 'this user';
                if (confirm(`Are you sure you want to delete ${name}?`)) {
                    btn.closest('form').submit();
                }
            });
        });
        return;
    }

    const modal = new bootstrap.Modal(modalEl);
    const nameEl = document.getElementById('deleteUserName');
    const confirmBtn = document.getElementById('confirmDeleteBtn');
    let activeForm = null;

    document.querySelectorAll('.js-delete-btn').forEach(btn => {
        btn.addEventListener('click', () => {
            activeForm = btn.closest('form');
            nameEl.textContent = btn.dataset.user || 'this user';
            modal.show();
        });
    });

    confirmBtn.addEventListener('click', () => {
        if (activeForm) activeForm.submit();
    });
})();
</script>
{% endblock %}
